<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/rowItemDescription"
        android:layout_width="221dp"
        android:layout_height="102dp"
        android:layout_alignBottom="@+id/rowItemImage"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/rowItemImage"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/rowItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/rowItemTitle"
        android:layout_width="223dp"
        android:layout_height="29dp"
        android:layout_above="@+id/rowItemDescription"
        android:layout_alignStart="@+id/rowItemDescription"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:text="TextView" />

</RelativeLayout>
